<h1>Create a new Figure</h1>

<form action="/owners" method="POST">
  <label>Name:</label>

  <br></br>

  <input type="text" name="figure[name]">

  <br></br>

  <label>Choose existing landmark:</label>

  <br></br>

  <%@landmarks.each do |landmark|%>
    <input type="checkbox" name="figure[title_ids][]" value="<%=landmark.id%>" id="<%=landmark.id%>"><%=landmark.name%></input>
  <%end%>

  <br></br>

  <label>And/Or, create a new landmark:</label>

  <br></br>

  <label>Name:</label>
    <input  type="text" name="landmark[name]"></input>
  <br></br>

  <label>Choose existing title:</label>

  <br></br>

  <%@titles.each do |title|%>
    <input type="checkbox" name="figure[title_ids][]" value="<%=title.id%>" id="<%=title.id%>"><%=title.name%></input>
  <%end%>

  <br></br>

  <label>And/Or, create a new title:</label>

  <br></br>

  <label>Name:</label>
    <input  type="text" name="title[name]"></input>
  <br></br>


  <input type="submit" value="Create Owner">
</form>
